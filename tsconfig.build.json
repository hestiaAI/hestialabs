{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2016",
    "allowJs": true,
    "lib": ["dom", "es2017"],
    // TS v4.2
    // "explainFiles": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@hestialabs/*": ["packages/*/src"],
      "shared/*": ["shared/*"],
      "collaborators/*": ["shared/collaborators/*"],
      "icons/*": ["shared/icons/*"],
      "preprocessors/*": ["shared/preprocessors/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "types": ["node"],
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    }
  },
  "exclude": ["node_modules", "dist"]
}
