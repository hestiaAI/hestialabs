{
  "private": true,
  "name": "hestialabs",
  "description": "HestiaLabs Experiences",
  "version": "0.0.0",
  "engines": {
    "npm": "7.x",
    "node": "14.x"
  },
  "type": "module",
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "node --loader ts-node/esm node_modules/.bin/webpack-cli",
    "build:b": "TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\"}' webpack",
    "build:a": "NODE_OPTIONS=\"--loader ts-node/esm\" webpack",
    "clean": "lerna run clean",
    "test": "lerna run test",
    "pub": "lerna version && lerna publish from-package",
    "prepublishOnly": "npm run build",
    "prepare": "husky install",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --cache --fix",
    "format": "prettier --config .prettierrc '*.ts'"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hestiaai/hestialabs.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hestiaai/hestialabs/issues"
  },
  "homepage": "https://github.com/hestiaai/hestialabs#readme",
  "devDependencies": {
    "@types/node": "^16.11.12",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "~5.3.0",
    "@typescript-eslint/parser": "~5.3.0",
    "eslint": "~7.32.0",
    "eslint-config-prettier": "~8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "~2.25.2",
    "eslint-plugin-prettier": "~4.0.0",
    "husky": "~7.0.4",
    "lerna": "~4.0.0",
    "lint-staged": "^11.2.6",
    "ts": "~0.2.2",
    "ts-loader": "~9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "typescript": "~3.9.10",
    "webpack": "~5.60.0",
    "webpack-cli": "~4.9.1"
  }
}
